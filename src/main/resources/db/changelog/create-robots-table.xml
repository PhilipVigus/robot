<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">
    <changeSet id="2" author="Phil Vigus">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="robots"/>
            </not>
        </preConditions>

        <createTable tableName="robots">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="room_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="orientation" type="varchar">
                <constraints nullable="false"/>
            </column>
            <column name="x" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="y" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="robots" baseColumnNames="room_id" constraintName="fk_robot_room_id"
                                 referencedTableName="rooms"
                                 referencedColumnNames="id"/>
    </changeSet>
</databaseChangeLog>